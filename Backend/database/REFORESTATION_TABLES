CREATE TABLE IF NOT EXISTS refoProjects(
	project_id SERIAL PRIMARY KEY,
	name VARCHAR(128) NOT NULL,
	size DECIMAL NOT NULL,
	country VARCHAR(20) NOT NULL,
	startDate DATE NOT NULL,
	updated DATE NOT NULL,
	status VARCHAR(15) NOT NULL,
	lat VARCHAR(32) NOT NULL,
	lng VARCHAR(32) NOT NULL,
	user_id VARCHAR(50) REFERENCES users(user_id) NOT NULL	
);

CREATE TABLE IF NOT EXISTS projectTracing(
	tracing_id SERIAL PRIMARY KEY,
	date DATE NOT NULL,
	terrainType VARCHAR(64) NOT NULL,
	reforestedArea DECIMAL NOT NULL,
	terrainElevation INT NOT NULL,
	ecosystem VARCHAR(64) NOT NULL,
	reforestedSpecies VARCHAR(264) NOT NULL,
	soilHumidity DECIMAL NOT NULL,
	soilDepth DECIMAL NOT NULL,
	notes VARCHAR(264) NOT NULL,
	project_id INT REFERENCES refoProjects(project_id) ON DELETE CASCADE NOT NULL
)

CREATE TABLE IF NOT EXISTS invaders(
	invader_id SERIAL PRIMARY KEY,
	name VARCHAR(64) NOT NULL,
	type VARCHAR(8) NOT NULL,
	status VARCHAR(64) NOT NULL,
	controlStatus VARCHAR(64) NOT NULL,
	affectation DECIMAL NOT NULL,
	notes VARCHAR(80),
	project_id INT REFERENCES refoProjects(project_id) ON DELETE CASCADE NOT NULL
)

CREATE TABLE IF NOT EXISTS invaderTracing(
	invaderTracing_id SERIAL PRIMARY KEY,
	name VARCHAR(64) NOT NULL,
	type VARCHAR(8) NOT NULL,
	status VARCHAR(64) NOT NULL,
	controlStatus VARCHAR(64) NOT NULL,
	affectation DECIMAL NOT NULL,
	notes VARCHAR(80),
	projectTracing_id INT REFERENCES projectTracing(tracing_id) ON DELETE CASCADE NOT NULL,
	invader_id INT REFERENCES invaders(invader_id) ON DELETE CASCADE NOT NULL
)